# Maintainer: Andrey Platonov <a.platonov@zarplata.ru>

pkgname=zabbix-agent-extension-rabbitmq
pkgver=${PKGVER:-autogenerated}
pkgrel=${PKGREL:-1}
_branch=${BRANCH:-master}
pkgdesc="Extension for zabbix-agentd for monitoring RabbitMQ service"
arch=('any')
license=('GPL')
makedepends=('go')
depends=('zabbix-agent')
#install="install.sh"
source=("git+https://github.com/zarplata/$pkgname.git#branch=$_branch")
md5sums=(
    'SKIP'
    )

build() {
  	cd "$srcdir/$pkgname"

    rm -rf "$srcdir/.go/src"
    mkdir -p "$srcdir/.go/src/github.com/zarplata"

    export GOPATH="$srcdir/.go"

    mv "$srcdir/$pkgname" "$srcdir/.go/src/github.com/zarplata"
    cd "$srcdir/.go/src/github.com/zarplata/$pkgname"

    make
}

package() {
    cd "$srcdir/.go/src/github.com/zarplata/$pkgname"
    curr_dir=$(pwd)

    ZBX_INC_DIR=/etc/zabbix/zabbix_agentd.conf.d/

    install -Dm 0755 .out/"${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
    install -Dm 0644 "${pkgname}.conf" "${pkgdir}${ZBX_INC_DIR}${pkgname}.conf"
    
}
